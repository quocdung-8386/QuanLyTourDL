<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Màu nền -->
    <solid android:color="@android:color/white" />

    <!-- Góc bo tròn -->
    <corners android:radius="8dp" />

    <!-- Viền (Border) - Optional: Thêm viền nhẹ để phân biệt với nền trắng -->
    <stroke
        android:width="1dp"
        android:color="#E0E0E0" />

    <!-- Đổ bóng (Padding) - Quan trọng để RecyclerView bên trong không bị dính vào viền -->
    <padding
        android:left="1dp"
        android:top="1dp"
        android:right="1dp"
        android:bottom="1dp" />
</shape>
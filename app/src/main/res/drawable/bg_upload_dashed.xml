<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Màu nền của khu vực tải lên. Dùng màu xám nhạt (hoặc trong suốt) -->
    <solid android:color="#F3F4F6" />

    <!-- Đường viền gạch đứt (dashed stroke) -->
    <stroke
        android:width="2dp"
        android:color="#9CA3AF"
        android:dashWidth="10dp"
        android:dashGap="10dp" />

    <!-- Bo góc 12dp cho hình dạng mềm mại hơn -->
    <corners android:radius="12dp" />

    <!-- Padding tùy chọn, mặc dù padding thường được đặt trong layout hoặc style -->
    <!-- <padding android:left="16dp" android:top="16dp" android:right="16dp" android:bottom="16dp" /> -->

</shape>
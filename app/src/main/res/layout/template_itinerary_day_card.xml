<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    app:strokeColor="#DDDDDD"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- NGÀY X (ID này đã khớp) -->
        <TextView
            android:id="@+id/tv_day_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NGÀY MẪU"
            android:textColor="?attr/colorPrimary"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <!-- Tiêu đề Ngày (Đã sửa ID thành et_day_title) -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:hint="Tiêu đề ngày (ví dụ: Khởi hành &amp; Tham quan Làng cổ)">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_day_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Chi tiết hoạt động (Đã sửa ID thành et_day_activities) -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mô tả chi tiết các hoạt động trong ngày">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_day_activities"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:inputType="textMultiLine"
                android:lines="4" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Nút thêm hoạt động chi tiết (Đã sửa ID thành btn_add_activity) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_add_activity"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thêm hoạt động chi tiết"
            android:textColor="?attr/colorPrimary"
            app:icon="@drawable/ic_add_circle"
            app:iconTint="?attr/colorPrimary"
            android:layout_gravity="end"/>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
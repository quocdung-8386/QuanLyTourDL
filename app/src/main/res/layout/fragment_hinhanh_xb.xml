<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".TaoTourHinhAnhFragment">

    <TextView
        android:id="@+id/tv_title_images"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Hình ảnh Tour và Cài đặt Xuất bản"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Khu vực CardView cho upload ảnh - ID: card_image_upload_area -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_image_upload_area"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp"
        app:strokeColor="#CCCCCC"
        app:strokeWidth="1dp"
        app:layout_constraintTop_toBottomOf="@id/tv_title_images"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Tải lên ảnh (Tối đa 5 ảnh). Nhấn để thêm."
            android:textColor="#888888"
            android:drawableTop="@android:drawable/ic_menu_upload"
            android:drawablePadding="8dp"/>
    </com.google.android.material.card.MaterialCardView>

    <!-- Mô tả SEO - ID: til_seo_description & et_seo_description -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_seo_description"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:counterMaxLength="300"
        app:counterEnabled="true"
        android:hint="Mô tả SEO (300 ký tự tối đa)"
        app:layout_constraintTop_toBottomOf="@id/card_image_upload_area"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_seo_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:lines="3"
            android:gravity="top"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Switch: Trạng thái xuất bản - ID: switch_publish_status -->
    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/switch_publish_status"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Xuất bản Tour (Public)"
        android:checked="true"
        app:layout_constraintTop_toBottomOf="@id/til_seo_description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Switch: Tour nổi bật - ID: switch_featured_tour -->
    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/switch_featured_tour"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Đặt làm Tour Nổi bật"
        android:checked="false"
        app:layout_constraintTop_toBottomOf="@id/switch_publish_status"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
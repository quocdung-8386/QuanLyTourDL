<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Tiêu đề -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quản lý Chi phí &amp; Định giá"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thiết lập giá vốn chi tiết và áp dụng lợi nhuận để xác định giá bán."
            android:textColor="#666666"
            android:textSize="14sp"
            android:layout_marginBottom="24dp"/>

        <!-- CARD 1: TÍNH GIÁ VỐN -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_cost_calculation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:strokeColor="#DDDDDD"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Giá Vốn Tour (Cost Price)"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:id="@+id/tv_total_cost_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 VNĐ"
                    android:textColor="?attr/colorPrimary"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:id="@+id/tv_cost_per_pax"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Giá vốn/khách dự kiến: 0 VNĐ (SL: 0)"
                    android:textColor="#666666"
                    android:textSize="14sp"
                    android:layout_marginBottom="16dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_open_cost_dialog"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tính Chi Phí Chi Tiết"
                    android:textAllCaps="false"
                    app:icon="@drawable/ic_edit"
                    app:iconTint="?attr/colorPrimary"
                    android:textColor="?attr/colorPrimary"
                    android:layout_gravity="end"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- CARD 2: ÁP DỤNG LỢI NHUẬN -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_pricing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:strokeColor="#DDDDDD"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Giá Bán Tour (Selling Price)"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:id="@+id/tv_selling_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 VNĐ"
                    android:textColor="#00AA00"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:id="@+id/tv_profit_margin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tỷ suất lợi nhuận dự kiến: 0%"
                    android:textColor="#666666"
                    android:textSize="14sp"
                    android:layout_marginBottom="16dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_open_profit_dialog"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Áp Dụng Lợi Nhuận"
                    android:textAllCaps="false"
                    app:icon="@drawable/ic_percent_24"
                    app:iconTint="?attr/colorPrimary"
                    android:textColor="?attr/colorPrimary"
                    android:layout_gravity="end"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Dịch vụ Bao gồm & Không bao gồm (Giữ lại từ file cũ) -->
        <!-- ... Các trường inclusion/exclusion tương tự fragment_chi_phi_tour.xml cũ ... -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dịch vụ Bao gồm (Inclusions)"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_inclusions"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:helperText="Liệt kê mỗi mục trên một dòng để dễ đọc hơn.">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_inclusions"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="top"
                android:inputType="textMultiLine"
                android:lines="3" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dịch vụ Không bao gồm (Exclusions)"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_exclusions"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:helperText="Các chi phí cá nhân hoặc dịch vụ không nằm trong giá tour.">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_exclusions"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="top"
                android:inputType="textMultiLine"
                android:lines="3" />
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loại quyết định:"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_marginBottom="5dp"/>

        <Spinner
            android:id="@+id/sp_type"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@android:drawable/btn_dropdown"
            android:layout_marginBottom="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên nhân viên:"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_marginBottom="5dp"/>

        <AutoCompleteTextView
            android:id="@+id/actv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập hoặc chọn tên nhân viên"
            android:inputType="textPersonName"
            android:padding="12dp"
            android:background="@android:drawable/edit_text"
            android:layout_marginBottom="15dp"
            android:completionThreshold="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phòng ban:"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_marginBottom="5dp"/>

        <Spinner
            android:id="@+id/sp_dept_dialog"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@android:drawable/btn_dropdown"
            android:layout_marginBottom="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số tiền (VNĐ):"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_marginBottom="5dp"/>

        <EditText
            android:id="@+id/et_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="VD: 500000"
            android:inputType="numberDecimal"
            android:padding="12dp"
            android:background="@android:drawable/edit_text"
            android:layout_marginBottom="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lý do / Mô tả:"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_marginBottom="5dp"/>

        <EditText
            android:id="@+id/et_reason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập lý do chi tiết..."
            android:inputType="textMultiLine"
            android:minLines="3"
            android:gravity="top"
            android:padding="12dp"
            android:background="@android:drawable/edit_text"/>

    </LinearLayout>
</ScrollView>
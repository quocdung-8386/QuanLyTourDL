<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        app:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_cho_phe_duyet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?attr/actionBarSize"
            app:contentInsetStartWithNavigation="0dp"
            app:navigationIcon="@drawable/ic_arrow_back">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:paddingEnd="16dp"
                android:layout_marginEnd="56dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chờ Phê Duyệt"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/text_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="14sp"
                    tools:text="Có 2 tour đang chờ"/>
            </LinearLayout>

            <ImageButton
                android:id="@+id/btn_side_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:background="@android:color/transparent"
                android:contentDescription="Menu"
                android:padding="16dp"
                android:src="@drawable/ic_menu"
                app:tint="@android:color/black" />

        </androidx.appcompat.widget.Toolbar>

        <EditText
            android:id="@+id/edit_search_tour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="12dp"
            android:padding="12dp"
            android:background="@drawable/bg_search_rounded"
            android:drawableStart="@drawable/ic_search"
            android:drawablePadding="8dp"
            android:hint="Tìm theo tên hoặc mã tour"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:inputType="text" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:paddingBottom="12dp"
            android:clipToPadding="false"
            android:layout_marginStart="16dp">

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chip_group_filters"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:singleLine="true">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_filter_button"
                    style="@style/Widget.MaterialComponents.Chip.Action"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lọc"
                    android:textColor="@color/white"
                    app:chipBackgroundColor="?attr/colorPrimary"
                    app:chipIcon="@drawable/ic_filter"
                    app:chipIconTint="@color/white"
                    android:layout_marginEnd="8dp"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_all"
                    style="@style/Widget.MaterialComponents.Chip.Action"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tất cả"
                    app:chipBackgroundColor="@color/chip_background_selector"
                    app:chipStrokeColor="@color/chip_stroke_selector"
                    android:checkable="true"
                    android:checked="true"
                    android:layout_marginEnd="8dp"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_domestic"
                    style="@style/Widget.MaterialComponents.Chip.Action"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tour trong nước"
                    app:chipBackgroundColor="@color/chip_background_selector"
                    app:chipStrokeColor="@color/chip_stroke_selector"
                    android:checkable="true"
                    android:layout_marginEnd="8dp"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_international"
                    style="@style/Widget.MaterialComponents.Chip.Action"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tour nước ngoài"
                    app:chipBackgroundColor="@color/chip_background_selector"
                    app:chipStrokeColor="@color/chip_stroke_selector"
                    android:checkable="true"/>

            </com.google.android.material.chip.ChipGroup>
        </HorizontalScrollView>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_tour_cho_phe_duyet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="16dp"
        android:clipToPadding="false"
        android:paddingTop="8dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:listitem="@layout/item_tour_cho_phe_duyet"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

    <LinearLayout
        android:id="@+id/bottom_navigation_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">
        <include layout="@menu/bottom_nav_menu" />
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:layout_marginHorizontal="4dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_fb_sentiment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tích cực"
                android:textSize="12sp"
                android:textStyle="bold"
                android:paddingHorizontal="10dp"
                android:paddingVertical="4dp"/>

            <View android:layout_width="0dp" android:layout_height="0dp" android:layout_weight="1"/>

            <TextView
                android:id="@+id/tv_fb_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20/12/2025"
                android:textSize="12sp"
                android:textColor="#9E9E9E"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_fb_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Nội dung đánh giá mẫu..."
            android:textColor="#333333"
            android:textSize="14sp"
            android:textStyle="italic"
            android:lineSpacingExtra="4dp"/>

        <TextView
            android:id="@+id/tv_fb_tour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Tên Tour"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#757575"/>

        <TextView
            android:id="@+id/tv_fb_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="⭐⭐⭐⭐⭐"
            android:textSize="10sp"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>
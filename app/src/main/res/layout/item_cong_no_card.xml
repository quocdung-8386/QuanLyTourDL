<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <View
            android:id="@+id/viewStatusLine"
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:background="#E53E3E" /> <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgServiceType"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@drawable/bg_circle_light_blue"
                android:padding="10dp"
                android:src="@drawable/ic_bus"
                app:tint="#3182CE" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_toEndOf="@id/imgServiceType"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvNhaCungCapName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Xe du lịch Minh Tâm"
                    android:textColor="#2D3748"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvMaHopDong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="HĐ-2023-001"
                    android:textColor="#718096"
                    android:textSize="12sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvStatusTag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:background="@drawable/bg_tag_red"
                android:paddingHorizontal="10dp"
                android:paddingVertical="4dp"
                android:text="Quá hạn"
                android:textColor="#E53E3E"
                android:textSize="11sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="12dp"
            android:background="#EDF2F7"
            android:dashGap="4dp"
            android:dashWidth="4dp" /> <TextView
        android:id="@+id/tvNoiDungTour"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thuê xe 45 chỗ - Tour Đà Nẵng"
        android:textColor="#4A5568"
        android:textSize="14sp" />

        <TextView
            android:id="@+id/tvHanThanhToan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:drawableStart="@drawable/ic_calendar_small"
            android:drawablePadding="6dp"
            android:text="Hạn 25/10/2023"
            android:textColor="#E53E3E"
            android:textSize="13sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/tvSoTienCongNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="15.000.000đ"
                android:textColor="#3182CE"
                android:textSize="18sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnGhiNhanTT"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/bg_btn_light_blue"
                android:drawableStart="@drawable/ic_payment"
                android:drawablePadding="8dp"
                android:paddingHorizontal="12dp"
                android:text="Ghi nhận TT"
                android:textAllCaps="false"
                android:textColor="#3182CE"
                android:textSize="12sp"
                android:textStyle="bold" />
        </RelativeLayout>
    </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
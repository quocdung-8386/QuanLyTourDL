<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="0dp"
    tools:context=".DetailFragment"> <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Chi tiết Hợp đồng"
    android:textSize="18sp"
    android:textStyle="bold"
    android:textColor="@android:color/black"
    android:layout_marginBottom="8dp"/>

    <include layout="@layout/item_detail_row" android:id="@+id/row_ma_hd_active"/>
    <include layout="@layout/item_detail_row" android:id="@+id/row_trang_thai_hd"/>
    <include layout="@layout/item_detail_row" android:id="@+id/row_ngay_ky"/>
    <include layout="@layout/item_detail_row" android:id="@+id/row_ngay_het_han"/>
    <include layout="@layout/item_detail_row" android:id="@+id/row_dieu_khoan"/> <include layout="@layout/item_detail_row" android:id="@+id/row_ngay_cap_nhat"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thông tin Nhà Cung Cấp Liên kết"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"/>

    <include layout="@layout/item_detail_row" android:id="@+id/row_supplier_id"/> <include layout="@layout/item_detail_row" android:id="@+id/row_ten_ncc"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thông tin Quản lý"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"/>

    <include layout="@layout/item_detail_row" android:id="@+id/row_ly_do_cham_dut"/>
    <include layout="@layout/item_detail_row" android:id="@+id/row_ghi_chu_cham_dut"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nội dung/Mô tả Hợp đồng"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/tv_noi_dung_hop_dong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:background="@drawable/bg_detail_section"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        tools:text="Đây là nội dung chi tiết của hợp đồng..."
        android:layout_marginBottom="8dp"/>

</LinearLayout>
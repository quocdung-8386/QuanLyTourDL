<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="16dp">

    <!-- Timeline Dot -->
    <View
        android:id="@+id/timeline_dot"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:background="@drawable/bg_timeline_dot_primary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="8dp"/>

    <!-- Timeline Line -->
    <View
        android:id="@+id/timeline_line"
        android:layout_width="2dp"
        android:layout_height="0dp"
        android:background="@color/colorPrimaryLight"
        app:layout_constraintStart_toStartOf="@+id/timeline_dot"
        app:layout_constraintTop_toBottomOf="@+id/timeline_dot"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="12dp"/>

    <!-- Content -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="24dp"
        app:layout_constraintStart_toEndOf="@id/timeline_dot"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_timeline_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/black"
            tools:text="Ngày 1: Hà Nội - Vịnh Hạ Long" />

        <TextView
            android:id="@+id/tv_timeline_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            tools:text="Khởi hành từ Hà Nội, di chuyển đến cảng Tuần Châu và nhận phòng trên du thuyền." />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
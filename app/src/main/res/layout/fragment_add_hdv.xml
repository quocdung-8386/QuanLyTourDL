<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9FAFB">

    <!-- Header (Đã được đơn giản hóa, giả định Toolbar nằm trong Activity hoặc được include) -->
    <!-- Nếu Header là một phần của Fragment: -->
    <LinearLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@android:color/white"
        android:elevation="2dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Quay lại"
            android:src="@drawable/ic_arrow_back"
            android:tint="#374151"
            android:layout_marginStart="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thêm HDV mới"
            android:textColor="#374151"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginStart="16dp"/>
    </LinearLayout>

    <!-- Scrollable Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/header_layout"
        app:layout_constraintBottom_toTopOf="@id/bottom_action_bar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- 1. Ảnh đại diện -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingTop="8dp"
                android:paddingBottom="16dp">

                <FrameLayout
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginBottom="4dp">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/img_avatar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#F0F0F0"
                        android:scaleType="centerCrop"
                        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent"
                        app:strokeColor="@android:color/white"
                        app:strokeWidth="4dp"
                        tools:src="@tools:sample/avatars" />

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="bottom|end"
                        android:src="@drawable/ic_camera_24"
                        app:backgroundTint="#8B5CF6"
                        app:tint="@android:color/white"
                        app:fabSize="mini"
                        app:borderWidth="0dp"
                        android:elevation="4dp"/>
                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chạm để tải ảnh lên"
                    android:textSize="12sp"
                    android:textColor="#6B7280" />
            </LinearLayout>

            <!-- 2. Thông tin cá nhân -->
            <TextView
                style="@style/SectionTitleStyle"
                android:text="Thông tin cá nhân" />

            <!-- Họ và tên -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/TextInputLayoutStyle"
                android:layout_marginBottom="12dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Họ và tên *"
                    android:inputType="textPersonName"
                    android:background="@drawable/bg_input_rounded"
                    android:padding="14dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <!-- Mã HDV (Readonly) -->
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/TextInputLayoutStyle.HalfWidth"
                    android:layout_marginEnd="8dp">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Mã HDV *"
                            android:text="HDV-8392"
                            android:textColor="#6B7280"
                            android:background="@drawable/bg_input_readonly"
                            android:padding="14dp"
                            android:focusable="false"
                            android:cursorVisible="false"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|end"
                            android:layout_marginEnd="8dp"
                            android:text="AUTO"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            android:textColor="#8B5CF6"
                            android:paddingStart="6dp"
                            android:paddingEnd="6dp"
                            android:paddingTop="2dp"
                            android:paddingBottom="2dp"
                            android:background="@drawable/bg_chip_purple" />
                    </FrameLayout>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Ngày sinh -->
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/TextInputLayoutStyle.HalfWidth"
                    app:endIconDrawable="@drawable/ic_calendar"
                    app:endIconMode="custom"
                    android:layout_marginStart="8dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Ngày sinh *"
                        android:inputType="date"
                        android:background="@drawable/bg_input_rounded"
                        android:padding="14dp" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <!-- Giới tính (Spinner/DropDown) -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                android:layout_marginBottom="24dp">

                <AutoCompleteTextView
                    android:id="@+id/dropdown_gender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Giới tính *"
                    android:inputType="none"
                    android:padding="14dp"
                    tools:text="Nam" />
            </com.google.android.material.textfield.TextInputLayout>


            <!-- 3. Thông tin liên hệ -->
            <TextView
                style="@style/SectionTitleStyle"
                android:text="Thông tin liên hệ" />

            <!-- Số điện thoại -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/TextInputLayoutStyle"
                android:layout_marginBottom="12dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Số điện thoại *"
                    android:inputType="phone"
                    android:background="@drawable/bg_input_rounded"
                    android:padding="14dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Email -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/TextInputLayoutStyle"
                android:layout_marginBottom="12dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:background="@drawable/bg_input_rounded"
                    android:padding="14dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Địa chỉ -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/TextInputLayoutStyle"
                android:layout_marginBottom="24dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Địa chỉ"
                    android:inputType="textPostalAddress"
                    android:background="@drawable/bg_input_rounded"
                    android:padding="14dp" />
            </com.google.android.material.textfield.TextInputLayout>


            <!-- 4. Kỹ năng & Kinh nghiệm -->
            <TextView
                style="@style/SectionTitleStyle"
                android:text="Kỹ năng &amp; Kinh nghiệm" />

            <!-- Ngôn ngữ thành thạo (FlowLayout / ChipGroup) -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ngôn ngữ thành thạo *"
                android:textSize="14sp"
                android:textColor="#374151"
                android:layout_marginBottom="4dp"/>

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chip_group_languages"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:chipSpacingHorizontal="8dp"
                app:chipSpacingVertical="4dp">
                <!-- Chip Ngôn ngữ sẽ được thêm bằng code Kotlin/Java -->
            </com.google.android.material.chip.ChipGroup>

            <!-- Input thêm ngôn ngữ -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/TextInputLayoutStyle"
                android:layout_marginBottom="12dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/input_add_language"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Thêm ngôn ngữ..."
                    android:inputType="text"
                    android:background="@drawable/bg_input_rounded"
                    android:padding="14dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Số năm kinh nghiệm (Stepper/Selector) -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Số năm kinh nghiệm *"
                android:textSize="14sp"
                android:textColor="#374151"
                android:layout_marginBottom="4dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:background="@drawable/bg_input_rounded"
                android:padding="4dp"
                android:layout_marginBottom="24dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_decrement_exp"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:text="-"
                    android:textSize="20sp"
                    android:textColor="#374151"
                    app:cornerRadius="8dp"
                    app:strokeColor="#D1D5DB"
                    android:insetLeft="0dp"
                    android:insetTop="0dp"
                    android:insetRight="0dp"
                    android:insetBottom="0dp"/>

                <TextView
                    android:id="@+id/text_experience_value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#374151"
                    tools:text="2" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_increment_exp"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:text="+"
                    android:textSize="20sp"
                    android:textColor="#374151"
                    app:cornerRadius="8dp"
                    app:strokeColor="#D1D5DB"
                    android:insetLeft="0dp"
                    android:insetTop="0dp"
                    android:insetRight="0dp"
                    android:insetBottom="0dp"/>
            </LinearLayout>


            <!-- 5. Chứng chỉ & Giấy tờ -->
            <TextView
                style="@style/SectionTitleStyle"
                android:text="Chứng chỉ &amp; Giấy tờ" />

            <!-- Khu vực Upload -->
            <LinearLayout
                android:id="@+id/layout_upload_file"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/bg_upload_dashed"
                android:padding="24dp"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_upload"
                    android:tint="#8B5CF6"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tải lên Thẻ HDV / Chứng chỉ"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#8B5CF6"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hỗ trợ PDF, JPG, PNG (Tối đa 5MB)"
                    android:textSize="12sp"
                    android:textColor="#6B7280"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

            <!-- File đã tải lên (Mẫu) -->
            <LinearLayout
                android:id="@+id/file_uploaded_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:background="@drawable/bg_input_rounded"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_pdf_file_24"
                    android:tint="#EF4444"
                    android:layout_marginEnd="12dp"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chung_chi_HDV_Quoc_te.pdf"
                        android:textSize="14sp"
                        android:textColor="#374151"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2.4 MB"
                        android:textSize="12sp"
                        android:textColor="#6B7280"/>
                </LinearLayout>

                <ImageButton
                    android:id="@+id/btn_delete_file"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Xóa file"
                    android:src="@drawable/ic_trash_24"
                    android:tint="#9CA3AF"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Footer / Action Bar (Fixed at bottom) -->
    <LinearLayout
        android:id="@+id/bottom_action_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@android:color/white"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Nút Hủy -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Hủy"
            android:textColor="#8B5CF6"
            android:textSize="16sp"
            android:textStyle="bold"
            app:strokeColor="#8B5CF6"
            app:strokeWidth="2dp"
            app:cornerRadius="12dp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_marginEnd="8dp"/>

        <!-- Nút Thêm mới -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_add_new"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Thêm mới"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:backgroundTint="#2563EB"
            app:cornerRadius="12dp"
            app:icon="@drawable/ic_check_24"
            app:iconTint="@android:color/white"
            app:iconGravity="textStart"
            android:layout_marginStart="8dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>